---
export interface Props {
	eventNo: string;
	title: string;
	date: string;
	venue: string;
	regLink?: string;
}

const { eventNo, title, date, venue, regLink = "#" } = Astro.props;
---

<section id={eventNo} class="font-poppins border border-black px-2 py-1 rounded-lg bg-red-100">
	<p class="text-center"><strong>EVENT {eventNo}</strong></p>
	<h1 id="title">Title: {title}</h1>
	<p id="date">Date: {date}</p>
	<p id="venue">Venue: {venue}</p>
</section>

